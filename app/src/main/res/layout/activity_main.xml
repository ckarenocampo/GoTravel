<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/lstTour"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      />


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="15dp"
        app:menu_colorNormal="#2196F3"
        app:menu_colorPressed="@color/colorPurple"
        app:menu_fab_label="Menu" >
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="#2196F3"
            app:fab_colorPressed="@color/colorPurple"
            app:fab_label="Iniciar sesion"
            android:src="@drawable/login"
            />
    </com.github.clans.fab.FloatingActionMenu>


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fabin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="15dp"
        app:menu_colorNormal="#2196F3"
        app:menu_colorPressed="@color/colorPurple"
        app:menu_fab_label="Menu" >
    <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="#2196F3"
        app:fab_colorPressed="@color/colorPurple"
        app:fab_label="Cerrar sesion"
            android:src="@drawable/logout"
            />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="#2196F3"
            app:fab_colorPressed="@color/colorPurple"
            app:fab_label="Tus tours"
            android:src="@drawable/informacion"
            />
    </com.github.clans.fab.FloatingActionMenu>


</androidx.coordinatorlayout.widget.CoordinatorLayout>